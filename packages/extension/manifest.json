{
  "manifest_version": 3,
  "name": "Live Comments",
  "description": "Try QA by commenting on the live web page!",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {},
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "externally_connectable": {
    "matches": ["http://localhost:1234/*", "https://live-comments.minung.dev/*"]
  }
}
